#:import utils kivy.utils
<SettingScreen>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#000000")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.92, "left":1}
            size_hint: 1, .4
            Image:
                radius: [18]
                id: gif
                source: "icon/giphy-9.gif"
                allow_stretch: True
                anim_delay: 0.03
                anim_loop: 1000

        GridLayout:
            cols: 2
            pos_hint: {"top": .4, "right":0.85}
            size_hint: 1, .1
            Label:
                text: "Location:"
                id: adr_label
            TextInput:
                id:location
                multiline: False
                write_tab: False
            Label:
                text: "name:"
                id: name_lable
            TextInput:
                id:name
                multiline: False
                write_tab: False
        BoxLayout:
            pos_hint: {"top": .15,"right":0.85}
            size_hint: 0.7,0.1
            spacing:100
            Button:
                id: my_open
                on_press:
                    root.open_press_on()
                on_release:
                    root.open_press_off()
                Image:
                    id:my_image
                    source: "icon/button_open.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: 250, 250
                    allow_stretch: True
            Button:
                id: my_create
                on_press:
                    root.create_press_on()
                on_release:
                    root.create_press_off()
                    app.change_screen("home_screen")
                Image:
                    id:my_image1
                    source: "icon/button_create.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: 250, 250
                    allow_stretch: True
<Popup_screen>
    BoxLayout:
        rows: 1
        pos_hint: {"top": 1,"right":1}
        size_hint: 1, .45
        FileChooserListView:
            id:filechoose
    Button:
        pos_hint: {"top": 0.4,"right":1}
        size_hint: 1, .2
        text: "Open"










